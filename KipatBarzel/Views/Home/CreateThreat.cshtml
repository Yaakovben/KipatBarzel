@model KipatBarzel.ViewModels.CreateThreatViewModel

@{
    ViewData["Title"] = "CreateThreat";
}

<h1>הוספת איום חדש</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateThreat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="OrgId">ארגון טרור</label>
                <select asp-for="OrgId" class="form-control" asp-items="Model.ThreatOrgs">
                    <option value="">בחר ארגון טרור</option>
                </select>
                <span asp-validation-for="OrgId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ThreaTypeId">נשק</label>
                <select asp-for="ThreaTypeId" class="form-control" asp-items="Model.Types">
                    <option value="">בחר סוג נשק</option>
                </select>
                <span asp-validation-for="ThreaTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
