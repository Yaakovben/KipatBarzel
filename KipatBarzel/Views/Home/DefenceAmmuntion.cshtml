@model IEnumerable<KipatBarzel.Models.DefenceAmmunition>

@{
    ViewData["Title"] = "DefenceAmmuntion";
}

<h1>מערכת הגנה</h1>

<p>
    <a asp-action="CreateDefenceAmmuntion">הוסף תחמושת חדשה</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @* @Html.DisplayFor(modelItem => item.Amount)*@
                    <form asp-action="updateDefenceAmmiunition" method="get">
                        <input name="amount" value="@item.Amount" />
                        <input name="dfid" hidden="hidden" value="@item.Id" />
                        <input type="submit" value="עדכון" />


                    </form>
            </td>
            
        </tr>
}
    </tbody>
</table>
